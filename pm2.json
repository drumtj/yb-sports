{
  "apps": [
    {
      "name": "Master",
      "script": "server.js",
      "watch": false,
      "autorestart": true,
      "error_file": "master_err.log",
      "env": {
        "__HOST": "localhost",
        "NODE_ENV": "production",
        "API_PORT": 80
      },
      "args": ["master"],
      "_exec_mode": "cluster",
      "instances": 1
    },
    {
      "name": "Slave",
      "script": "server.js",
      "watch": false,
      "autorestart": true,
      "error_file": "slave_err.log",
      "env": {
        "NODE_ENV": "production",
        "API_PORT": 80
      },
      "args": ["slave"],
      "instances": 3
    }
  ]
}
